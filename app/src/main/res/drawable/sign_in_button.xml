<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Світло-сірий фон при натисканні -->
            <stroke android:width="2dp" android:color="@color/kormoTech_blue" /> <!-- Синій контур -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_backg" />
            <stroke android:width="2dp" android:color="@color/gray_stroke" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Білий фон для звичайного стану -->
            <stroke android:width="2dp" android:color="@color/kormoTech_blue" /> <!-- Синій контур -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>