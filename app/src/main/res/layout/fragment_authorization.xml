<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.mainactivity.MainActivity">

    <ImageView
        android:id="@+id/k_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        android:src="@drawable/multicolors_k_logo"
        android:padding="112dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/rotation_star_k_logo"
        android:layout_marginBottom="-80dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextPIB"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@drawable/edit_text_underline"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:textColor="@color/kormoTech_blue"
        android:gravity="center"
        android:hint="@string/pib"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="-16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:fontFamily="@font/proxim_nova_semibold"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/googleSignInButton"
        android:layout_width="0dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/guideline3"
        android:background="@drawable/sign_in_button"
        android:drawableStart="@drawable/google_icon_selector"
        android:paddingTop="6dp"
        android:paddingStart="8dp"
        android:paddingEnd="42dp"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textColor="@drawable/button_text_color_selector"
        android:text="@string/log"
        android:fontFamily="@font/proxim_nova_semibold"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>