<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".navFragments.InstructionFragment">

    <Button
        android:id="@+id/previous_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pagetxt"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        android:text="Назад"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/pagetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textColor="@color/kormoTech_blue"
        app:layout_constraintStart_toEndOf="@id/previous_page"
        app:layout_constraintEnd_toStartOf="@id/next_page"
        app:layout_constraintBaseline_toBaselineOf="@id/previous_page"
        android:textSize="32sp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/next_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pagetxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:text="Вперед"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/previous_page"
        android:scaleType="centerCrop"
        android:paddingStart="50dp"
        android:paddingEnd="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>